<?xml version='1.0' encoding='utf-8'?>
<robot name="so_arm100">
  
  <!-- Materials -->
  <material name="3d_printed">
    <color rgba="1.0 0.82 0.12 1.0"/>
  </material>
  <material name="sts3215">
    <color rgba="0.1 0.1 0.1 1.0"/>
  </material>
  <material name="camera_material">
    <color rgba="0.7 0.7 0.7 1.0"/>
  </material>
  <!-- Debug material for visualizing collision boxes -->
  <material name="collision_debug">
    <color rgba="0.0 1.0 0.0 0.5"/>
  </material>

  <!-- Link base -->
  <link name="base">
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
    <visual>
      <geometry>
        <mesh filename="assets/Base.stl" scale="1.0 1.0 1.0"/>
      </geometry>
      <material name="3d_printed"/>
    </visual>
    <visual>
      <geometry>
        <mesh filename="assets/Base_Motor.stl" scale="1.0 1.0 1.0"/>
      </geometry>
      <material name="sts3215"/>
    </visual>
    <collision>
      <origin xyz="0 0 0.025" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.04" length="0.05"/>
      </geometry>
    </collision>
  </link>

  <!-- Link shoulder -->
  <link name="shoulder">
    <inertial>
      <mass value="0.119226"/>
      <origin xyz="-0.00009 0.0591 0.0311" rpy="0 0 0"/>
      <inertia ixx="5.94278e-05" ixy="0" ixz="0" iyy="5.89975e-05" iyz="0" izz="3.13712e-05"/>
    </inertial>
    <visual>
      <geometry>
        <mesh filename="assets/Rotation_Pitch.stl" scale="1.0 1.0 1.0"/>
      </geometry>
      <material name="3d_printed"/>
    </visual>
    <visual>
      <geometry>
        <mesh filename="assets/Rotation_Pitch_Motor.stl" scale="1.0 1.0 1.0"/>
      </geometry>
      <material name="sts3215"/>
    </visual>
    <collision>
      <origin xyz="0 0.05 0.03" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.08 0.05"/>
      </geometry>
    </collision>
  </link>

  <!-- Link upper_arm -->
  <link name="upper_arm">
    <inertial>
      <mass value="0.162409"/>
      <origin xyz="-0.000017 0.07018 0.003104" rpy="0 0 0"/>
      <inertia ixx="0.000213312" ixy="0" ixz="0" iyy="0.000167164" iyz="0" izz="7.01522e-05"/>
    </inertial>
    <visual>
      <geometry>
        <mesh filename="assets/Upper_Arm.stl" scale="1.0 1.0 1.0"/>
      </geometry>
      <material name="3d_printed"/>
    </visual>
    <visual>
      <geometry>
        <mesh filename="assets/Upper_Arm_Motor.stl" scale="1.0 1.0 1.0"/>
      </geometry>
      <material name="sts3215"/>
    </visual>
    <collision>
      <origin xyz="0 0.06 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.04 0.12 0.04"/>
      </geometry>
    </collision>
  </link>

  <!-- Link lower_arm -->
  <link name="lower_arm">
    <inertial>
      <mass value="0.147968"/>
      <origin xyz="-0.0034 0.00138 0.0768" rpy="0 0 0"/>
      <inertia ixx="0.000138803" ixy="0" ixz="0" iyy="0.000107748" iyz="0" izz="4.84242e-05"/>
    </inertial>
    <visual>
      <geometry>
        <mesh filename="assets/Lower_Arm.stl" scale="1.0 1.0 1.0"/>
      </geometry>
      <material name="3d_printed"/>
    </visual>
    <visual>
      <geometry>
        <mesh filename="assets/Lower_Arm_Motor.stl" scale="1.0 1.0 1.0"/>
      </geometry>
      <material name="sts3215"/>
    </visual>
    <collision>
      <origin xyz="0 0 0.07" rpy="0 0 0"/>
      <geometry>
        <box size="0.04 0.04 0.14"/>
      </geometry>
    </collision>
  </link>

  <!-- Link wrist -->
  <link name="wrist">
    <inertial>
      <mass value="0.0661321"/>
      <origin xyz="-0.00853 -0.03523 -0.00002" rpy="0 0 0"/>
      <inertia ixx="3.45403e-05" ixy="0" ixz="0" iyy="2.39041e-05" iyz="0" izz="1.94704e-05"/>
    </inertial>
    <visual>
      <geometry>
        <mesh filename="assets/Wrist_Pitch_Roll.stl" scale="1.0 1.0 1.0"/>
      </geometry>
      <material name="3d_printed"/>
    </visual>
    <visual>
      <geometry>
        <mesh filename="assets/Wrist_Pitch_Roll_Motor.stl" scale="1.0 1.0 1.0"/>
      </geometry>
      <material name="sts3215"/>
    </visual>
    <collision>
      <origin xyz="0 -0.03 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.04 0.06 0.04"/>
      </geometry>
    </collision>
  </link>

  <!-- Link gripper (fixed jaw) -->
  <link name="gripper">
    <inertial>
      <mass value="0.0929859"/>
      <origin xyz="0.00552 -0.028 0.00048" rpy="0 0 0"/>
      <inertia ixx="5.03136e-05" ixy="0" ixz="0" iyy="4.64098e-05" iyz="0" izz="2.72961e-05"/>
    </inertial>
    <visual>
      <geometry>
        <mesh filename="assets/Fixed_Jaw.stl" scale="1.0 1.0 1.0"/>
      </geometry>
      <material name="3d_printed"/>
    </visual>
    <visual>
      <geometry>
        <mesh filename="assets/Fixed_Jaw_Motor.stl" scale="1.0 1.0 1.0"/>
      </geometry>
      <material name="sts3215"/>
    </visual>
    <!-- Box collision for reliable contact (instead of complex mesh) -->
    <collision>
      <origin xyz="0.015 -0.055 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.015 0.09 0.025"/>
      </geometry>
    </collision>
    <!-- DEBUG: Visual representation of collision box (green) -->
    <visual>
      <origin xyz="0.015 -0.055 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.015 0.09 0.025"/>
      </geometry>
      <material name="collision_debug"/>
    </visual>
  </link>

  <!-- Link jaw (moving jaw) -->
  <link name="jaw">
    <inertial>
      <mass value="0.0202444"/>
      <origin xyz="-0.0016 -0.03032 0.00044" rpy="0 0 0"/>
      <inertia ixx="1.11265e-06" ixy="0" ixz="0" iyy="8.99651e-07" iyz="0" izz="2.99548e-07"/>
    </inertial>
    <visual>
      <geometry>
        <mesh filename="assets/Moving_Jaw.stl" scale="1.0 1.0 1.0"/>
      </geometry>
      <material name="3d_printed"/>
    </visual>
    <!-- Box collision for reliable contact (instead of complex mesh) -->
    <collision>
      <origin xyz="0.005 -0.0425 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.015 0.075 0.025"/>
      </geometry>
    </collision>
    <!-- DEBUG: Visual representation of collision box (green) -->
    <visual>
      <origin xyz="0.005 -0.0425 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.015 0.075 0.025"/>
      </geometry>
      <material name="collision_debug"/>
    </visual>
  </link>


  <!-- Joint from base to shoulder -->
  <joint name="shoulder_pan" type="revolute">
    <parent link="base"/>
    <child link="shoulder"/>
    <origin xyz="0 -0.0452 0.0165" rpy="1.57079 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57079" upper="1.57079" effort="35" velocity="1"/>
  </joint>

  <!-- Joint from shoulder to upper_arm. Origin calibrated to reach 1:1 scale -->
  <joint name="shoulder_lift" type="revolute">
    <parent link="shoulder"/>
    <child link="upper_arm"/>
    <origin xyz="0 0.1025 0.0306" rpy="-1.8 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="0" upper="3.5" effort="35" velocity="1"/>
  </joint>

  <!-- Joint from upper_arm to lower_arm. Target Length (L1) = 117mm -->
  <joint name="elbow_flex" type="revolute">
    <parent link="upper_arm"/>
    <child link="lower_arm"/>
    <origin xyz="0 0.1135 0.028" rpy="1.57079 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="-3.14158" upper="0" effort="35" velocity="1"/>
  </joint>

  <!-- Joint from lower_arm to wrist. Target Length (L2) = 136mm -->
  <joint name="wrist_flex" type="revolute">
    <parent link="lower_arm"/>
    <child link="wrist"/>
    <origin xyz="0 0.0052 0.1359" rpy="-1 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="-2.5" upper="1.2" effort="35" velocity="1"/>
  </joint>

  <!-- Joint from wrist to gripper. Scaled assembly offset -->
  <joint name="wrist_roll" type="revolute">
    <parent link="wrist"/>
    <child link="gripper"/>
    <origin xyz="0 -0.0601 0" rpy="0 3.14159 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-3.14158" upper="3.14158" effort="35" velocity="1"/>
  </joint>

  <!-- Joint from gripper to jaw. Scaled assembly offset -->
  <joint name="gripper" type="revolute">
    <parent link="gripper"/>
    <child link="jaw"/>
    <origin xyz="-0.0202 -0.0244 0" rpy="0 3.14158 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-0.2" upper="2.0" effort="35" velocity="1"/>
  </joint>

</robot>
